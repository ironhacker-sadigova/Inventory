<div class="page-header">
    <h1><?=$this->pageTitle?></h1>
</div>

<div class="row-fluid">

    <? if ($this->displayNavigationPanel !== false) : ?>
        <div class="well span" id="navigationPanel">
            <?= $this->partial('cell/navigation.phtml',
                ['cell' => $this->cell, 'isParentCellReachable' => $this->isParentCellReachable])?>
        </div>
        <div id="navigationClose" class="span">
            <i class="icon-remove"></i>
            <span><?=__('Orga', 'navigation', 'hideNavigationPanel')?></span>
            <!-- <i class="icon-arrow-down"></i> -->
        </div>
    <? endif; ?>

    <div id="navigationContent" class="span">
        <?php
        $this->tabView->display();
        ?>
    </div>

</div>

<script type="text/javascript">
    $('#navigationClose').click(function () {
        var navigationPanel = $('#navigationPanel');
        if (navigationPanel.css('display') == 'none') {
            $(this).find('i')
                .addClass('icon-remove');
            $(this).find('span').html('<?=__('Orga', 'navigation', 'hideNavigationPanel')?>');
        } else {
            $(this).find('i')
                .removeClass('icon-remove');
            $(this).find('span').html('<?=__('Orga', 'navigation', 'displayNavigationPanel')?>');
        }
        navigationPanel.animate({width: "toggle"}, 50);
    });
</script>
